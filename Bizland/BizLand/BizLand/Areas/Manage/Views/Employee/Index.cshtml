@model IEnumerable<Employee>
<div class="container">
    <div class="card mt-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Position</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Edit</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Employee employee in Model)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.Position</td>
                            <td> <img width="50" src="@employee.ImgUrl"> </img> </td>
                            <td>@employee.Description</td>
                            <td><a type="button" class="btn btn-success" asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id">Edit</a> </td>
                            <td><a type="button" class="btn btn-danger" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a> </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
</div>




